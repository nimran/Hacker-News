<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:height_weight="0.8"
                app:width_weight="0.6"
                app:use_gradient="true"
                android:id="@+id/post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                tools:text="This is an adapter layout which is used to render the list items. Lets see how it works and how it looks in the mobile. hope for the best." />


            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:height_weight="0.8"
                app:width_weight="0.6"
                app:use_gradient="true"
                android:id="@+id/post_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                tools:text="Name"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:height_weight="0.8"
                app:width_weight="0.6"
                app:use_gradient="true"
                android:id="@+id/post_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                tools:text="4 hours ago" />

            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:height_weight="0.8"
                app:width_weight="0.6"
                app:use_gradient="true"
                android:id="@+id/post_fav_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                tools:text="40 Points" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                app:height_weight="0.8"
                app:width_weight="0.6"
                app:use_gradient="true"
                android:id="@+id/post_comments_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                tools:text="40 Comments" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>